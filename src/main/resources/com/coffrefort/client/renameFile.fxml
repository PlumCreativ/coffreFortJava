<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="240"
      prefWidth="420"
      spacing="15"
      style="-fx-background-color: #E5E5E5; -fx-background-radius: 8;"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.coffrefort.client.controllers.RenameFileController">

    <padding>
        <Insets bottom="20" left="25" right="25" top="20"/>
    </padding>

    <!-- En-tÃªte -->
    <HBox spacing="12">

        <!-- Bande rouge avec icÃ´ne -->
        <VBox alignment="CENTER"
              prefWidth="48"
              style="-fx-background-color: #980b0b; -fx-background-radius: 8;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>

            <Text text="ðŸ“„"
                  fill="white"
                  style="-fx-font-size: 24px;"/>
        </VBox>

        <!-- Titre + sous-titre -->
        <VBox alignment="CENTER_LEFT" spacing="4">
            <Text text="Renommer le fichier"
                  fill="#980b0b"
                  style="-fx-font-weight: bold; -fx-font-size: 18px;"/>

            <Text text="Saisissez un nouveau nom."
                  fill="#666666"
                  style="-fx-font-size: 12px;"/>
        </VBox>
    </HBox>

    <Separator>
        <VBox.margin>
            <Insets bottom="5" top="10"/>
        </VBox.margin>
    </Separator>

    <!-- Zone de message + input -->
    <VBox spacing="10">

        <Label alignment="CENTER"
               prefWidth="370"
               wrapText="true"
               textAlignment="CENTER"
               style="-fx-text-fill: #333333; -fx-font-size: 13px;"
               text="Nom actuel :"/>

        <Label fx:id="currentNameLabel"
               alignment="CENTER"
               prefWidth="370"
               wrapText="true"
               textAlignment="CENTER"
               style="-fx-text-fill: #980b0b; -fx-font-weight: bold; -fx-font-size: 13px;"
               text="NomDuFichier.ext"/>

        <TextField fx:id="nameField"
                   promptText="Nouveau nom du fichier"
                   style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #cccccc; -fx-padding: 8 10;"/>

        <!-- message erreur (cachÃ© par dÃ©faut) -->
        <Label fx:id="errorLabel"
               visible="false"
               managed="false"
               alignment="CENTER"
               prefWidth="370"
               wrapText="true"
               textAlignment="CENTER"
               style="-fx-background-color: #ffe5e5; -fx-text-fill: #980b0b; -fx-font-weight: bold; -fx-padding: 8; -fx-background-radius: 6;"
               text="Erreur"/>

    </VBox>

    <Region VBox.vgrow="ALWAYS"/>

    <!-- Boutons d'action CENTRÃ‰S -->
    <HBox alignment="CENTER" spacing="12">

        <Button fx:id="cancelButton"
                text="Annuler"
                cancelButton="true"
                onAction="#handleCancel"
                style="-fx-background-color: #cccccc; -fx-text-fill: #333333; -fx-background-radius: 4; -fx-cursor: hand; -fx-padding: 8 20;">
            <font>
                <Font size="12"/>
            </font>
        </Button>

        <Button fx:id="confirmButton"
                text="Renommer"
                defaultButton="true"
                onAction="#handleConfirm"
                style="-fx-background-color: #980b0b; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand; -fx-padding: 8 24; -fx-font-weight: bold;">
            <font>
                <Font size="12"/>
            </font>
            <effect>
                <DropShadow radius="10.0">
                    <color>
                        <Color red="0.60" green="0.05" blue="0.05" opacity="0.35"/>
                    </color>
                </DropShadow>
            </effect>
        </Button>

    </HBox>

</VBox>

