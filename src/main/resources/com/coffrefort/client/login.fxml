<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="com.coffrefort.client.controllers.LoginController"
          xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1"
          hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <children>
        <Text text="Connexion" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
            <font>
                <Font size="18"/>
            </font>
        </Text>

        <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Mot de passe" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <children>
                <Button text="Se connecter" defaultButton="true" onAction="#handleLogin"/>
            </children>
        </HBox>

        <Label fx:id="errorLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-text-fill: #b00020;"/>
    </children>
</GridPane>
