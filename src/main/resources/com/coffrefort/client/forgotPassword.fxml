<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane fx:id="rootPane" hgap="5"
          minHeight="550.0" minWidth="400.0"
          prefHeight="550.0" prefWidth="400.0"
          style="-fx-background-color: #E5E5E5;" vgap="20.0"
          xmlns="http://javafx.com/javafx/25"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.coffrefort.client.controllers.ForgotPasswordController">

    <padding>
        <Insets left="40.0" right="40.0" top="30.0" />
    </padding>

    <columnConstraints>
        <ColumnConstraints fillWidth="true"
                           halignment="CENTER"
                           hgrow="ALWAYS"
                           minWidth="200.0"
                           prefWidth="350.0" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>

    <children>

        <!-- Logo -->
        <ImageView fitHeight="130.0"
                   fitWidth="180.0"
                   pickOnBounds="true"
                   preserveRatio="true"
                   GridPane.rowIndex="0">
            <image>
                <Image url="@/images/Logo_CryptoVault.png" />
            </image>
        </ImageView>

        <!-- Titre -->
        <Text fill="#980b0b" strokeType="OUTSIDE"
              strokeWidth="0.0" text="Mot de passe oublié"
              textAlignment="CENTER" wrappingWidth="250.0"
              GridPane.rowIndex="1">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Text>

        <!-- Message d'instructions -->
        <Text fill="#666666" strokeType="OUTSIDE"
              strokeWidth="0.0"
              text="Entrez votre adresse email pour recevoir un lien de réinitialisation."
              textAlignment="CENTER"
              wrappingWidth="270.0"
              GridPane.rowIndex="2">
            <font>
                <Font size="12.0" />
            </font>
            <GridPane.margin>
                <Insets bottom="10.0" top="5.0" />
            </GridPane.margin>
        </Text>

        <!-- Champ email -->
        <TextField fx:id="emailField"
                   prefHeight="30.0"
                   prefWidth="70.0"
                   promptText="votre.email@exemple.com"
                   GridPane.rowIndex="3">
            <effect>
                <DropShadow height="15.0"
                            offsetX="2.0"
                            offsetY="2.0"
                            radius="7.0"
                            spread="0.1"
                            width="15.0">
                    <color>
                        <Color red="0.5960784554481506"
                               green="0.04313725605607033"
                               blue="0.04313725605607033" />
                    </color>
                </DropShadow>
            </effect>
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
        </TextField>

        <!-- Zone message (succès ou erreur) -->
        <Label fx:id="messageLabel"
               style="-fx-background-radius: 4;
                      -fx-font-weight: bold;"
               textAlignment="CENTER"
               wrapText="true"
               visible="false"
               managed="false"
               GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
        </Label>

        <!-- Bouton Envoyer -->
        <Button fx:id="sendButton"
                alignment="CENTER"
                contentDisplay="CENTER"
                defaultButton="true"
                onAction="#handleSendResetLink"
                prefHeight="35.0"
                prefWidth="200.0"
                style="-fx-background-color: #980b0b; -fx-background-radius: 4; -fx-cursor: hand;"
                text="Envoyer le lien"
                textFill="WHITE"
                GridPane.rowIndex="5"
                GridPane.halignment="CENTER">
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
            <font>
                <Font size="14.0" />
            </font>
        </Button>

        <!-- Bouton Retour -->
        <Button fx:id="backButton"
                alignment="CENTER"
                contentDisplay="CENTER"
                onAction="#handleBackToLogin"
                prefHeight="35.0"
                prefWidth="200.0"
                style="-fx-background-color: transparent;
                       -fx-border-color: #980b0b;
                       -fx-border-width: 2;
                       -fx-border-radius: 4;
                       -fx-cursor: hand;"
                text="Retour à la connexion"
                textFill="#980b0b"
                GridPane.rowIndex="6"
                GridPane.halignment="CENTER">
            <GridPane.margin>
                <Insets top="5.0" />
            </GridPane.margin>
            <font>
                <Font size="14.0" />
            </font>
        </Button>

        <!-- Message d'aide supplémentaire -->
        <Text fill="#666666" strokeType="OUTSIDE"
              strokeWidth="0.0"
              text="Si vous ne recevez pas d'email, vérifiez vos spams ou contactez le support."
              textAlignment="CENTER"
              wrappingWidth="270.0"
              GridPane.rowIndex="7">
            <font>
                <Font size="10.0" />
            </font>
            <GridPane.margin>
                <Insets top="30.0" />
            </GridPane.margin>
        </Text>

        <!-- Lien support -->
        <HBox alignment="CENTER" spacing="5.0" GridPane.rowIndex="8">
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
            <children>
                <Text fill="#666666"
                      strokeType="OUTSIDE"
                      strokeWidth="0.0"
                      text="Besoin d'aide ?">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Text>
                <Hyperlink fx:id="supportLink"
                           onAction="#handleContactSupport"
                           style="-fx-text-fill: #980b0b; -fx-cursor: hand;"
                           text="Contactez le support">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Hyperlink>
            </children>
        </HBox>

        <!-- Mentions légales -->
        <Hyperlink fx:id="mentionsLegales"
                   style="-fx-text-fill: #980b0b; -fx-cursor: hand;"
                   text="Mentions Légales"
                   GridPane.rowIndex="8"
                   GridPane.halignment="CENTER">
            <font>
                <Font size="12.0" />
            </font>
            <GridPane.margin>
                <Insets bottom="20.0" />
            </GridPane.margin>
        </Hyperlink>

    </children>
</GridPane>
