                cancelButton="true"
                onAction="#handleCancel"
                style="-fx-background-color: #cccccc; -fx-text-fill: #333333; -fx-background-radius: 4; -fx-cursor: hand; -fx-padding: 8 20;">
            <font>
                <Font size="12"/>
            </font>
        </Button>

        <Button fx:id="confirmButton"
                text="Supprimer"
                defaultButton="true"
                onAction="#handleConfirm"
                style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand; -fx-padding: 8 24; -fx-font-weight: bold;">
            <font>
                <Font size="12"/>
            </font>
            <effect>
                <DropShadow radius="10.0">
                    <color>
                        <Color red="0.85" green="0.2" blue="0.2" opacity="0.45"/>
