<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.coffrefort.client.controllers.MySharesController"
      spacing="12"
      style="-fx-background-color: #F4F4F4;">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Mes partages"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #980b0b;"/>

    <TableView fx:id="sharesTable"
               VBox.vgrow="ALWAYS"
               prefHeight="420">

        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>

        <columns>
            <TableColumn fx:id="resourceCol"
                         text="Ressource"
                         prefWidth="160"/>

            <TableColumn fx:id="labelCol"
                         text="Label"
                         prefWidth="180"/>

            <TableColumn fx:id="expiresCol"
                         text="Expire le"
                         prefWidth="120"/>

            <TableColumn fx:id="remainingCol"
                         text="Restant"
                         prefWidth="80"/>

            <TableColumn fx:id="statusCol"
                         text="Ã‰tat"
                         prefWidth="80"/>

            <TableColumn fx:id="actionCol"
                         text="Actions"
                         prefWidth="140"/>
        </columns>
    </TableView>

</VBox>