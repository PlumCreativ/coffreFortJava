<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.*?>

<VBox prefHeight="350"
      prefWidth="500"
      spacing="15"
      style="-fx-background-color: #E5E5E5; -fx-background-radius: 8;"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.coffrefort.client.controllers.ModifyQuotaController">

    <padding>
        <Insets bottom="20" left="25" right="25" top="20"/>
    </padding>

    <!-- En-tÃªte -->
    <HBox spacing="12">
        <VBox alignment="CENTER"
              prefWidth="48"
              style="-fx-background-color: #980b0b; -fx-background-radius: 8;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <Text text="ðŸ’¾"
                  fill="white"
                  style="-fx-font-size: 24px;"/>
        </VBox>

        <VBox alignment="CENTER_LEFT" spacing="4">
            <Text text="Modifier le quota"
                  fill="#980b0b"
                  style="-fx-font-weight: bold; -fx-font-size: 18px;"/>

            <Text text="DÃ©finir une nouvelle limite de stockage"
                  fill="#666666"
                  style="-fx-font-size: 12px;"/>
        </VBox>
    </HBox>

    <Separator>
        <VBox.margin>
            <Insets bottom="5" top="10"/>
        </VBox.margin>
    </Separator>

    <!-- Informations utilisateur -->
    <VBox spacing="8"
          style="-fx-background-color: #f5f5f5;
                 -fx-padding: 12;
                 -fx-background-radius: 6;">

        <HBox spacing="8">
            <Label text="Utilisateur :"
                   style="-fx-font-weight: bold; -fx-text-fill: #666666;"/>
            <Label fx:id="usernameLabel"
                   text="user@example.com"
                   style="-fx-text-fill: #333333;"/>
        </HBox>

        <HBox spacing="8">
            <Label text="Quota actuel :"
                   style="-fx-font-weight: bold; -fx-text-fill: #666666;"/>
            <Label fx:id="currentQuotaLabel"
                   text="5.0 GB"
                   style="-fx-text-fill: #333333;"/>
        </HBox>

        <HBox spacing="8">
            <Label text="Espace utilisÃ© :"
                   style="-fx-font-weight: bold; -fx-text-fill: #666666;"/>
            <Label fx:id="usedSpaceLabel"
                   text="2.5 GB"
                   style="-fx-text-fill: #333333;"/>
        </HBox>
    </VBox>

    <!-- Nouveau quota -->
    <VBox spacing="8">
        <Label text="Nouveau quota (en GB) :"
               style="-fx-font-weight: bold; -fx-text-fill: #666666; -fx-font-size: 12px;"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="quotaField"
                       promptText="Ex: 10"
                       prefWidth="150"
                       style="-fx-font-size: 14px; -fx-padding: 8;"/>

            <Label text="GB"
                   style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
        </HBox>

        <!-- Suggestions -->
        <HBox spacing="8">
            <Button text="1 GB"
                    onAction="#setQuota1GB"
                    style="-fx-background-color: #e0e0e0;
                   -fx-text-fill: #333333;
                   -fx-background-radius: 4;
                   -fx-cursor: hand;
                   -fx-padding: 6 12;
                   -fx-font-size: 11px;"/>

            <Button text="5 GB"
                    onAction="#setQuota5GB"
                    style="-fx-background-color: #e0e0e0;
                   -fx-text-fill: #333333;
                   -fx-background-radius: 4;
                   -fx-cursor: hand;
                   -fx-padding: 6 12;
                   -fx-font-size: 11px;"/>

            <Button text="10 GB"
                    onAction="#setQuota10GB"
                    style="-fx-background-color: #e0e0e0;
                   -fx-text-fill: #333333;
                   -fx-background-radius: 4;
                   -fx-cursor: hand;
                   -fx-padding: 6 12;
                   -fx-font-size: 11px;"/>

            <Button text="50 GB"
                    onAction="#setQuota50GB"
                    style="-fx-background-color: #e0e0e0;
                   -fx-text-fill: #333333;
                   -fx-background-radius: 4;
                   -fx-cursor: hand;
                   -fx-padding: 6 12;
                   -fx-font-size: 11px;"/>

            <Button text="100 GB"
                    onAction="#setQuota100GB"
                    style="-fx-background-color: #e0e0e0;
                   -fx-text-fill: #333333;
                   -fx-background-radius: 4;
                   -fx-cursor: hand;
                   -fx-padding: 6 12;
                   -fx-font-size: 11px;"/>
        </HBox>
    </VBox>



    <!-- Message d'erreur -->
    <Label fx:id="errorLabel"
           visible="false"
           managed="false"
           wrapText="true"
           style="-fx-background-color: #ffe5e5;
                  -fx-text-fill: #980b0b;
                  -fx-padding: 8;
                  -fx-background-radius: 6;
                  -fx-font-weight: bold;"
           text="Erreur"/>

    <Region VBox.vgrow="ALWAYS"/>

    <!-- Boutons d'action -->
    <HBox alignment="CENTER" spacing="12">
        <Button fx:id="cancelButton"
                text="Annuler"
                onAction="#handleCancel"
                style="-fx-background-color: #cccccc;
                       -fx-text-fill: #333333;
                       -fx-background-radius: 4;
                       -fx-cursor: hand;
                       -fx-padding: 10 20;">
            <font><Font size="12"/></font>
        </Button>

        <Button fx:id="confirmButton"
                text="Confirmer"
                defaultButton="true"
                onAction="#handleConfirm"
                style="-fx-background-color: #980b0b;
                       -fx-text-fill: white;
                       -fx-background-radius: 4;
                       -fx-cursor: hand;
                       -fx-padding: 10 20;
                       -fx-font-weight: bold;">
            <font><Font size="12"/></font>
            <effect>
                <DropShadow radius="10.0">
                    <color>
                        <Color red="0.60" green="0.05" blue="0.05" opacity="0.35"/>
                    </color>
                </DropShadow>
            </effect>
        </Button>
    </HBox>
</VBox>