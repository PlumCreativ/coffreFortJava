<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane hgap="5"
          vgap="20.0"
          prefHeight="500.0"
          prefWidth="350.0"
          minHeight="500.0"
          minWidth="350.0"
          style="-fx-background-color: #E5E5E5;"
          xmlns="http://javafx.com/javafx/25"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.coffrefort.client.controllers.LoginController">

    <padding>
        <Insets left="40.0" right="40.0" top="30.0" />
    </padding>

    <columnConstraints>
        <ColumnConstraints fillWidth="true"
                           halignment="CENTER"
                           hgrow="ALWAYS"
                           minWidth="200.0"
                           prefWidth="350.0" />
    </columnConstraints>

    <children>

        <!-- Logo -->
        <ImageView fitHeight="130.0"
                   fitWidth="180.0"
                   pickOnBounds="true"
                   preserveRatio="true"
                   GridPane.rowIndex="0">
            <image>
                <!-- Placer l'image dans src/main/resources/images -->
                <Image url="@/images/Logo_CryptoVault.png" />
            </image>
        </ImageView>

        <!-- Titre -->
        <Text fill="#980b0b"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              text="Connexion"
              textAlignment="CENTER"
              wrappingWidth="150.0"
              GridPane.rowIndex="2">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Text>

        <!-- Champ email -->
        <TextField fx:id="emailField"
                   prefHeight="30.0"
                   prefWidth="70.0"
                   promptText="Email"
                   GridPane.rowIndex="4">
            <effect>
                <DropShadow height="15.0"
                            offsetX="2.0"
                            offsetY="2.0"
                            radius="7.0"
                            spread="0.1"
                            width="15.0">
                    <color>
                        <Color red="0.5960784554481506"
                               green="0.04313725605607033"
                               blue="0.04313725605607033" />
                    </color>
                </DropShadow>
            </effect>
        </TextField>

        <!-- Champ mot de passe -->
        <PasswordField fx:id="passwordField"
                       prefHeight="30.0"
                       prefWidth="70.0"
                       promptText="Mot de passe"
                       GridPane.rowIndex="5">
            <effect>
                <DropShadow height="15.0"
                            offsetX="2.0"
                            offsetY="2.0"
                            radius="7.0"
                            width="15.0">
                    <color>
                        <Color red="0.5960784554481506"
                               green="0.04313725605607033"
                               blue="0.04313725605607033" />
                    </color>
                </DropShadow>
            </effect>
        </PasswordField>

        <!-- Zone message d'erreur -->
        <Label fx:id="errorLabel"
               style="-fx-text-fill: #b00000;"
               GridPane.rowIndex="6">
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
        </Label>

        <!-- Bouton connexion -->
        <Button alignment="CENTER"
                contentDisplay="CENTER"
                defaultButton="true"
                onAction="#handleLogin"
                prefHeight="29.0"
                prefWidth="115.0"
                style="-fx-background-color: #980b0b; -fx-background-radius: 4; -fx-cursor: hand;"
                text="Se connecter"
                textFill="WHITE"
                GridPane.hgrow="ALWAYS"
                GridPane.rowIndex="8"
                GridPane.vgrow="NEVER">
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
            <font>
                <Font size="14.0" />
            </font>
        </Button>

        <!-- Mentions légales en bas -->
        <Text fill="#980b0b"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              text="Mentions Légales"
              GridPane.rowIndex="12">
            <font>
                <Font size="13.0" />
            </font>
            <GridPane.margin>
                <Insets bottom="20.0" />
            </GridPane.margin>
        </Text>

    </children>
</GridPane>
