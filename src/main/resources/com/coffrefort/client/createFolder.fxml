<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="350" prefWidth="450" spacing="15"
      style="-fx-background-color: #E5E5E5; -fx-background-radius: 8;"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.coffrefort.client.controllers.CreateFolderController">

    <padding>
        <Insets bottom="20" left="25" right="25" top="20" />
    </padding>

    <!-- En-tÃªte -->
    <HBox spacing="12">
        <!-- Bande avec icÃ´ne -->
        <VBox alignment="CENTER" prefWidth="48"
              style="-fx-background-color: #980b0b; -fx-background-radius: 8;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Text fill="white" style="-fx-font-size: 24px;" text="ðŸ“" />
        </VBox>

        <!-- Titre + sous-titre -->
        <VBox alignment="CENTER_LEFT" spacing="4">
            <Text fill="#980b0b"
                  style="-fx-font-weight: bold; -fx-font-size: 18px;"
                  text="CrÃ©er un nouveau dossier" />
            <Text fill="#666666"
                  style="-fx-font-size: 11px;"
                  text="Entrez le nom du dossier Ã  crÃ©er" />
        </VBox>
    </HBox>

    <Separator>
        <VBox.margin>
            <Insets bottom="5" top="10" />
        </VBox.margin>
    </Separator>

    <!-- Zone de saisie -->
    <VBox spacing="12"
          style="-fx-background-color: white; -fx-background-radius: 6; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 6;">
        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>

        <!-- Label -->
        <Label style="-fx-text-fill: #333333; -fx-font-weight: bold; -fx-font-size: 12px;"
               text="Nom du dossier :" />

        <!-- Champ de texte -->
        <TextField fx:id="folderNameField"
                   promptText="Entrez le nom du dossier"
                   style="-fx-background-radius: 4; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 4; -fx-font-size: 13px;">
            <effect>
                <DropShadow height="5.0" offsetX="1.0" offsetY="1.0" radius="2.0" width="5.0">
                    <color>
                        <Color red="0.6" green="0.04" blue="0.04" opacity="0.15" />
                    </color>
                </DropShadow>
            </effect>
        </TextField>

        <!-- Label d'erreur (cachÃ© par dÃ©faut) -->
        <Label fx:id="errorLabel"
               managed="false"
               visible="false"
               style="-fx-text-fill: #d32f2f; -fx-font-size: 11px; -fx-font-style: italic;"
               text=""
               wrapText="true" />
    </VBox>

    <Region VBox.vgrow="ALWAYS" />

    <!-- Boutons d'action -->
    <HBox alignment="CENTER_RIGHT" spacing="12">
        <Button fx:id="cancelButton"
                cancelButton="true"
                onAction="#handleCancel"
                style="-fx-background-color: #cccccc; -fx-text-fill: #333333; -fx-background-radius: 4; -fx-cursor: hand; -fx-padding: 8 20;"
                text="Annuler">
            <font>
                <Font size="12" />
            </font>
        </Button>

        <Button fx:id="createButton"
                defaultButton="true"
                onAction="#handleCreate"
                style="-fx-background-color: #980b0b; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand; -fx-padding: 8 24; -fx-font-weight: bold;"
                text="CrÃ©er">
            <font>
                <Font size="12" />
            </font>
            <effect>
                <DropShadow radius="10.0">
                    <color>
                        <Color red="0.6" green="0.04" blue="0.04" opacity="0.4" />
                    </color>
                </DropShadow>
            </effect>
        </Button>
    </HBox>

</VBox>
