<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<GridPane fx:id = "rootPane"
          hgap="5"
          vgap="20.0"
          prefHeight="600.0"
          prefWidth="350.0"
          minHeight="600.0"
          minWidth="350.0"
          style="-fx-background-color: #E5E5E5;"
          xmlns="http://javafx.com/javafx/25"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.coffrefort.client.controllers.RegisterController">

    <padding>
        <Insets top="30.0" right="40.0" bottom="20.0" left="40.0" />
    </padding>

    <columnConstraints>
        <ColumnConstraints fillWidth="true"
                           halignment="CENTER"
                           hgrow="ALWAYS"
                           minWidth="200.0"
                           prefWidth="350.0" />
    </columnConstraints>

    <children>

        <!-- Logo (même que login.fxml) -->
        <ImageView fitHeight="130.0"
                   fitWidth="180.0"
                   pickOnBounds="true"
                   preserveRatio="true"
                   GridPane.rowIndex="0">
            <image>
                <Image url="@/images/Logo_CryptoVault.png" />
            </image>
        </ImageView>

        <!-- Titre -->
        <Text fill="#980b0b"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              text="Inscription"
              textAlignment="CENTER"
              wrappingWidth="150.0"
              GridPane.rowIndex="2">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Text>

        <!-- Sous-titre -->
        <Text fill="#666666"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              text="Créez votre compte"
              textAlignment="CENTER"
              GridPane.rowIndex="3">
            <font>
                <Font size="12.0" />
            </font>
        </Text>

        <!-- Champ email -->
        <TextField fx:id="emailField1"
                   prefHeight="30.0"
                   prefWidth="70.0"
                   promptText="Email"
                   GridPane.rowIndex="4">
            <effect>
                <DropShadow height="15.0"
                            offsetX="2.0"
                            offsetY="2.0"
                            radius="7.0"
                            spread="0.1"
                            width="15.0">
                    <color>
                        <Color red="0.5960784554481506"
                               green="0.04313725605607033"
                               blue="0.04313725605607033" />
                    </color>
                </DropShadow>
            </effect>
        </TextField>

        <!-- Message d'erreur email -->
        <Label fx:id="emailError1"
               managed="false"
               visible="false"
               style="-fx-text-fill: #b00000; -fx-font-size: 10px;"
               GridPane.rowIndex="5">
            <GridPane.margin>
                <Insets top="-10.0" />
            </GridPane.margin>
        </Label>

        <!-- Champ mot de passe (masqué / visible via StackPane) -->
        <StackPane GridPane.rowIndex="5">
            <!-- Mot de passe masqué -->
            <PasswordField fx:id="passwordField1"
                           prefHeight="30.0"
                           prefWidth="70.0"
                           promptText="Mot de passe">
                <effect>
                    <DropShadow height="15.0"
                                offsetX="2.0"
                                offsetY="2.0"
                                radius="7.0"
                                width="15.0">
                        <color>
                            <Color red="0.5960784554481506"
                                   green="0.04313725605607033"
                                   blue="0.04313725605607033" />
                        </color>
                    </DropShadow>
                </effect>
            </PasswordField>

            <!-- Mot de passe en clair -->
            <TextField fx:id="passwordVisibleField1"
                       prefHeight="30.0"
                       prefWidth="70.0"
                       promptText="Mot de passe"
                       visible="false"
                       managed="false">
                <effect>
                    <DropShadow height="15.0"
                                offsetX="2.0"
                                offsetY="2.0"
                                radius="7.0"
                                width="15.0">
                        <color>
                            <Color red="0.5960784554481506"
                                   green="0.04313725605607033"
                                   blue="0.04313725605607033" />
                        </color>
                    </DropShadow>
                </effect>
            </TextField>
        </StackPane>

        <!-- Message d'erreur mot de passe -->
        <Label fx:id="passwordError1"
               managed="false"
               visible="false"
               style="-fx-text-fill: #b00000; -fx-font-size: 10px;"
               GridPane.rowIndex="7">
            <GridPane.margin>
                <Insets top="-10.0" />
            </GridPane.margin>
        </Label>

        <!-- Champ confirmation mot de passe (masqué / visible via StackPane) -->
        <StackPane GridPane.rowIndex="6">
            <!-- Mot de passe masqué -->
            <PasswordField fx:id="confirmPasswordField1"
                           prefHeight="30.0"
                           prefWidth="70.0"
                           promptText="Confirmation de mot de passe">
                <effect>
                    <DropShadow height="15.0"
                                offsetX="2.0"
                                offsetY="2.0"
                                radius="7.0"
                                width="15.0">
                        <color>
                            <Color red="0.5960784554481506"
                                   green="0.04313725605607033"
                                   blue="0.04313725605607033" />
                        </color>
                    </DropShadow>
                </effect>
            </PasswordField>

            <!-- Confirmation de mot de passe en clair -->
            <TextField fx:id="confirmPasswordVisibleField1"
                       prefHeight="30.0"
                       prefWidth="70.0"
                       promptText="Confirmation de mot de passe"
                       visible="false"
                       managed="false">
                <effect>
                    <DropShadow height="15.0"
                                offsetX="2.0"
                                offsetY="2.0"
                                radius="7.0"
                                width="15.0">
                        <color>
                            <Color red="0.5960784554481506"
                                   green="0.04313725605607033"
                                   blue="0.04313725605607033" />
                        </color>
                    </DropShadow>
                </effect>
            </TextField>
        </StackPane>

        <!-- Message d'erreur confirmation -->
        <Label fx:id="confirmPasswordError1"
               managed="false"
               visible="false"
               style="-fx-text-fill: #b00000; -fx-font-size: 10px;"
               GridPane.rowIndex="9">
            <GridPane.margin>
                <Insets top="-10.0" />
            </GridPane.margin>
        </Label>

        <!-- Zone message d'erreur général -->
        <Label fx:id="errorLabel1"
               managed="false"
               visible="false"
               wrapText="true"
               style="-fx-text-fill: #b00000;"
               GridPane.rowIndex="10">
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
        </Label>

        <!-- Zone message de succès -->
        <Label fx:id="successLabel1"
               managed="false"
               visible="false"
               wrapText="true"
               style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"
               GridPane.rowIndex="10">
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
        </Label>

        <!-- Bouton inscription (même style que bouton login) -->
        <Button fx:id="registerButton1"
                alignment="CENTER"
                contentDisplay="CENTER"
                defaultButton="true"
                onAction="#handleRegister"
                prefHeight="29.0"
                prefWidth="115.0"
                style="-fx-background-color: #980b0b; -fx-background-radius: 4; -fx-cursor: hand;"
                text="S'inscrire"
                textFill="WHITE"
                GridPane.hgrow="ALWAYS"
                GridPane.rowIndex="11"
                GridPane.vgrow="NEVER">
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
            <font>
                <Font size="14.0" />
            </font>
            <Label fx:id="statusLabel1" text="Prêt" />
        </Button>

        <!-- Lien vers connexion -->
        <HBox alignment="CENTER"
              spacing="5.0"
              GridPane.rowIndex="12">
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
            <children>
                <Text fill="#666666"
                      strokeType="OUTSIDE"
                      strokeWidth="0.0"
                      text="Déjà inscrit ?">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Text>
                <Hyperlink fx:id="loginLink1"
                           onAction="#handleGoToLogin"
                           style="-fx-text-fill: #980b0b; -fx-cursor: hand;"
                           text="Se connecter">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Hyperlink>
            </children>
        </HBox>

        <!-- Mentions légales en bas -->
        <Hyperlink fx:id="mentionslégales"

                   style="-fx-text-fill: #980b0b; -fx-cursor: hand;"
                   text="Mentions Légales"
                   GridPane.rowIndex="12">
            <font>
                <Font size="12.0" />
            </font>
            <GridPane.margin>
                <Insets bottom="20.0" />
            </GridPane.margin>
        </Hyperlink>

        <!-- CheckBox pour voir le mot de passe -->
        <HBox spacing="10" alignment="CENTER_LEFT" GridPane.rowIndex="7">
            <CheckBox fx:id="loginSelectShowPassword"
                      mnemonicParsing="false"
                      text="Afficher le mot de passe"
                      onAction="#handleToggleShowPassword"
                     />
        </HBox>

    </children>
</GridPane>
