<GridPane fx:id="rootPane"
          hgap="5"
          minHeight="750.0"
          minWidth="380.0"
          prefHeight="750.0"
          prefWidth="380.0"
          style="-fx-background-color: #E5E5E5;"
          vgap="15.0"
          xmlns="http://javafx.com/javafx/25"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.coffrefort.client.controllers.RegisterController">

    <padding>
        <Insets bottom="20.0" left="40.0" right="40.0" top="30.0" />
    </padding>

    <columnConstraints>
        <ColumnConstraints fillWidth="true"
                           halignment="CENTER"
                           hgrow="ALWAYS"
                           minWidth="200.0"
                           prefWidth="380.0" />
    </columnConstraints>

    <children>

        <!-- Logo -->
        <ImageView fitHeight="120.0"
                   fitWidth="170.0"
                   pickOnBounds="true"
                   preserveRatio="true"
                   GridPane.halignment="CENTER"
                   GridPane.rowIndex="0">
            <image>
                <Image url="@/images/Logo_CryptoVault.png" />
            </image>
        </ImageView>

        <!-- Titre -->
        <Text fill="#980b0b"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              text="Inscription"
              textAlignment="CENTER"
              GridPane.halignment="CENTER"
              GridPane.rowIndex="1">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Text>

        <!-- Sous-titre -->
        <Text fill="#666666"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              text="Créez votre compte sécurisé"
              textAlignment="CENTER"
              GridPane.halignment="CENTER"
              GridPane.rowIndex="2">
            <font>
                <Font size="12.0" />
            </font>
            <GridPane.margin>
                <Insets bottom="10.0" />
            </GridPane.margin>
        </Text>

        <!-- Champ email -->
        <VBox spacing="4" GridPane.rowIndex="3">
            <Label style="-fx-text-fill: #333333;
                            -fx-font-size: 11px;
                            -fx-font-weight: bold;"
                   text="Email">
                <padding>
                    <Insets left="2.0" />
                </padding>
            </Label>
            <TextField fx:id="emailField1"
                       prefHeight="35.0"
                       promptText="votre.email@exemple.com"
                       style="-fx-background-radius: 4;
                                -fx-border-color: #cccccc;
                                -fx-border-radius: 4;
                                -fx-padding: 8;">
                <effect>
                    <DropShadow height="8.0" offsetX="1.0" offsetY="1.0" radius="3.5" spread="0.05" width="8.0">
                        <color>
                            <Color opacity="0.15" />
                        </color>
                    </DropShadow>
                </effect>
            </TextField>
        </VBox>

        <!-- Champ mot de passe -->
        <VBox spacing="4" GridPane.rowIndex="4">
            <Label style="-fx-text-fill: #333333;
                        -fx-font-size: 11px;
                        -fx-font-weight: bold;"
                   text="Mot de passe">
                <padding>
                    <Insets left="2.0" />
                </padding>
            </Label>
            <StackPane>
                <!-- Mot de passe masqué -->
                <PasswordField fx:id="passwordField1"
                               prefHeight="35.0"
                               promptText="Minimum 8 caractères"
                               style="-fx-background-radius: 4;
                                        -fx-border-color: #cccccc;
                                        -fx-border-radius: 4;
                                        -fx-padding: 8;">
                    <effect>
                        <DropShadow height="8.0" offsetX="1.0" offsetY="1.0" radius="3.5" width="8.0">
                            <color>
                                <Color opacity="0.15" />
                            </color>
                        </DropShadow>
                    </effect>
                </PasswordField>

                <!-- Mot de passe en clair -->
                <TextField fx:id="passwordVisibleField1"
                           managed="false"
                           prefHeight="35.0"
                           promptText="Minimum 8 caractères"
                           style="-fx-background-radius: 4;
                                    -fx-border-color: #cccccc;
                                    -fx-border-radius: 4;
                                    -fx-padding: 8;"
                           visible="false">
                    <effect>
                        <DropShadow height="8.0" offsetX="1.0" offsetY="1.0" radius="3.5" width="8.0">
                            <color>
                                <Color opacity="0.15" />
                            </color>
                        </DropShadow>
                    </effect>
                </TextField>
            </StackPane>
        </VBox>

        <!-- Champ confirmation mot de passe -->
        <VBox spacing="4" GridPane.rowIndex="5">
            <Label style="-fx-text-fill: #333333;
                            -fx-font-size: 11px;
                            -fx-font-weight: bold;"
                   text="Confirmation du mot de passe">
                <padding>
                    <Insets left="2.0" />
                </padding>
            </Label>
            <StackPane>
                <!-- Confirmation masquée -->
                <PasswordField fx:id="confirmPasswordField1"
                               prefHeight="35.0"
                               promptText="Retapez votre mot de passe"
                               style="-fx-background-radius: 4;
                                        -fx-border-color: #cccccc;
                                        -fx-border-radius: 4;
                                        -fx-padding: 8;">
                    <effect>
                        <DropShadow height="8.0" offsetX="1.0" offsetY="1.0" radius="3.5" width="8.0">
                            <color>
                                <Color opacity="0.15" />
                            </color>
                        </DropShadow>
                    </effect>
                </PasswordField>

                <!-- Confirmation en clair -->
                <TextField fx:id="confirmPasswordVisibleField1"
                           managed="false"
                           prefHeight="35.0"
                           promptText="Retapez votre mot de passe"
                           style="-fx-background-radius: 4;
                                    -fx-border-color: #cccccc;
                                    -fx-border-radius: 4;
                                    -fx-padding: 8;"
                           visible="false">
                    <effect>
                        <DropShadow height="8.0" offsetX="1.0" offsetY="1.0" radius="3.5" width="8.0">
                            <color>
                                <Color opacity="0.15" />
                            </color>
                        </DropShadow>
                    </effect>
                </TextField>
            </StackPane>
        </VBox>

        <!-- CheckBox pour afficher les mots de passe -->
        <HBox alignment="CENTER_LEFT" spacing="8" GridPane.rowIndex="6">
            <CheckBox fx:id="loginSelectShowPassword"
                      onAction="#handleToggleShowPassword"
                      style="-fx-text-fill: #666666;
                      -fx-font-size: 11px;"
                      text="Afficher les mots de passe" />
            <GridPane.margin>
                <Insets left="2.0" top="5.0" />
            </GridPane.margin>
        </HBox>

        <!-- Message d'erreur général -->
        <Label fx:id="errorLabel1"
               alignment="CENTER"
               managed="false"
               style="-fx-background-color: #ffe5e5;
                        -fx-text-fill: #b00000;
                        -fx-font-weight: bold;
                        -fx-background-radius: 4;"
               textAlignment="CENTER"
               visible="false"
               wrapText="true"
               GridPane.rowIndex="7">
            <GridPane.margin>
                <Insets top="2.0" />
            </GridPane.margin>
        </Label>

        <!-- Message de succès -->
        <Label fx:id="successLabel1"
               alignment="CENTER"
               managed="false"
               style="-fx-background-color: #d4edda;
                    -fx-text-fill: #155724;
                    -fx-font-weight: bold;
                    -fx-background-radius: 4;"
               textAlignment="CENTER"
               visible="false"
               wrapText="true"
               GridPane.rowIndex="7">
            <GridPane.margin>
                <Insets top="2.0" />
            </GridPane.margin>
        </Label>

        <!-- Message de statut (inscription en cours...) -->
        <Label fx:id="statusLabel1"
               alignment="CENTER"
               managed="false"
               style="-fx-text-fill: #666666;
                        -fx-font-size: 12px;
                        -fx-font-style: italic;"
               text=""
               textAlignment="CENTER"
               visible="false"
               wrapText="true"
               GridPane.rowIndex="8">
            <GridPane.margin>
                <Insets top="2.0" />
            </GridPane.margin>
        </Label>

        <!-- Bouton inscription -->
        <Button fx:id="registerButton1"
                alignment="CENTER"
                defaultButton="true"
                maxWidth="Infinity"
                onAction="#handleRegister"
                prefHeight="40.0"
                style="-fx-background-color: #980b0b;
                        -fx-background-radius: 4;
                        -fx-cursor: hand;"
                text="S'inscrire"
                textFill="WHITE"
                GridPane.rowIndex="9">
            <GridPane.margin>
                <Insets top="3.0" />
            </GridPane.margin>
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <effect>
                <DropShadow height="12.0" offsetX="2.0" offsetY="2.0" radius="5.5" spread="0.1" width="12.0">
                    <color>
                        <Color red="0.596" green="0.043" blue="0.043" opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Button>

        <!-- Lien vers connexion -->
