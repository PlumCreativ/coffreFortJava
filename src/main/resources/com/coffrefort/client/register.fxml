        <!-- Lien vers connexion -->
        <HBox alignment="CENTER" spacing="5.0" GridPane.rowIndex="10">
            <GridPane.margin>
                <Insets top="5.0" />
            </GridPane.margin>
            <children>
                <Text fill="#666666"
                      strokeType="OUTSIDE"
                      strokeWidth="0.0"
                      text="Déjà inscrit ?">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Text>
                <Hyperlink fx:id="loginLink1"
                           onAction="#handleGoToLogin"
                           style="-fx-text-fill: #980b0b;
                                -fx-cursor: hand;"
                           text="Se connecter">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Hyperlink>
            </children>
        </HBox>

        <!-- Mentions légales -->
